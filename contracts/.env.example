# ============================================
# CONTRACTS ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# Network RPC URLs
# Get your RPC URL from Infura (https://infura.io), Alchemy (https://alchemy.com), or other providers
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Private key for deployment
# WARNING: Use a dedicated wallet with minimal funds for testing
# Format: 0x followed by 64 hex characters (no spaces)
# Example: 0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Contract addresses (auto-populated after deployment)
# After running deploy script, copy the addresses here and update backend/frontend .env files
COLLATERAL_LOCK_CONTRACT_ADDRESS=
VERIFICATION_NFT_CONTRACT_ADDRESS=
